{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/Development/thegrid/hooks/activity-reporter.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/Development/thegrid/hooks/activity-reporter.sh"
          }
        ]
      }
    ]
  }
}
